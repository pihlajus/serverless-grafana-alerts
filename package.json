{
  "name": "ruuvi-aws-alarms",
  "version": "0.0.1",
  "description": "Get requests from Slack and create alarms to Grafana",
  "author": "Jussi Pihlainen",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "sls offline start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "query-string": "6.11.0",
    "request": "2.88.2",
    "request-promise-native": "1.0.8",
    "source-map-support": "0.5.16",
    "typescript": "3.7.5",
    "squirrelly": "7.9.1"
  },
  "devDependencies": {
    "@hewmen/serverless-plugin-typescript": "1.1.17",
    "@types/aws-lambda": "8.10.40",
    "@types/jest": "25.1.4",
    "@types/node": "13.7.1",
    "@types/request-promise-native": "1.0.17",
    "@types/supertest": "2.0.8",
    "@types/squirrelly": "7.1.0",
    "@typescript-eslint/parser": "2.20.0",
    "@typescript-eslint/eslint-plugin": "2.20.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "jest": "25.1.0",
    "prettier": "1.19.1",
    "serverless-domain-manager": "3.3.1",
    "serverless-offline": "12.0.3",
    "serverless-plugin-optimize": "4.1.3-rc.1",
    "supertest": "4.0.2",
    "ts-jest": "25.2.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
